<div class="background-image">
  <img src="https://res.cloudinary.com/dv7nx2bxb/image/upload/v1710177079/project-backend/pmihribdkadindvtrdme.png" class="img" alt="it image">
</div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <div class="my-3">
                <div class="card text-center border-danger mb-3">    
                    <div class="card-body text-danger">
                        <h5 class="card-title"><strong>{{details.title}}</strong></h5>
                        <p class="card-text"><strong>Year of publication:</strong> {{details.year}}</p>
                        <p class="card-text"><strong>Type:</strong> {{details.type}}</p>
                        <p class="card-text"><strong>Handle:</strong> {{details.handle}}</p>
                        <p class="card-text"><strong>Originally published in:</strong> {{details.originallyPublishedIn}}</p>
                        <p class="card-text"><strong>Notes about the short:</strong> {{details.Notes}}</p>
                        <a class="btn btn-danger" href="/shorts/1">Check all shorts</a>
                        {{#if currentUser}}
                                <div class="row justify-content-around">
                                    <div class="col-lg-3 col-md-4 col-sm-6 m-1">
                                        <form action="/shorts/{{details._id}}/add-favorite" method="POST">
                                            <input type="submit" value="Add favorite"
                                                class="btn btn-outline-success btn-sm">
                                        </form>
                                    </div>
                                    <div class="col-lg-3 col-md-4 col-sm-6 m-1">
                                        <form action="/shorts/{{details._id}}/quit-favorite" method="POST">
                                            <input type="submit" value="Quit favorites"
                                                class="btn btn-outline-danger btn-sm">
                                        </form>
                                    </div>
                                </div>
                        {{/if}}
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
